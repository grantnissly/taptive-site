---
const navLinks = [
  { href: "/", label: "Taptive" },
  { href: "/work", label: "Clients" },
  { href: "/writing", label: "Writing" },
  { href: "/contact", label: "Contact" },
];
---

<header class="max-w-2xl mx-auto px-5 pt-12 pb-10">
  <nav class="flex items-center justify-between">
    <ul class="hidden sm:flex items-center gap-6">
      {navLinks.map((link, i) => (
        <li>
          <a href={link.href} class:list={["no-underline", i === 0 ? "font-bold" : ""]}>
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <a href="/" class="sm:hidden font-bold no-underline">Taptive</a>

    <button
      id="mobile-menu-btn"
      class="sm:hidden p-2 -mr-2"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <div id="mobile-menu" class="hidden sm:hidden pt-6">
    <ul class="flex flex-col gap-4">
      {navLinks.slice(1).map((link) => (
        <li>
          <a href={link.href} class="no-underline">
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
