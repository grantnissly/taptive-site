---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/work", label: "Work" },
  { href: "/writing", label: "Writing" },
  { href: "/contact", label: "Contact" },
];
---

<header class="border-b border-gray-100">
  <nav class="max-w-4xl mx-auto px-6 py-6 flex items-center justify-between">
    <a href="/" class="text-xl font-semibold tracking-tight hover:text-bitcoin transition-colors">
      Taptive
    </a>

    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 -mr-2"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <ul class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              "text-sm transition-colors",
              pathname === link.href || (link.href !== "/" && pathname.startsWith(link.href))
                ? "text-bitcoin font-medium"
                : "text-gray-600 hover:text-gray-900"
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100">
    <ul class="px-6 py-4 space-y-4">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              "block text-sm transition-colors",
              pathname === link.href || (link.href !== "/" && pathname.startsWith(link.href))
                ? "text-bitcoin font-medium"
                : "text-gray-600 hover:text-gray-900"
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
