---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const services = [
  {
    title: "BD/Sales",
    description: "Building relationships and closing deals in the Bitcoin ecosystem. From initial outreach to partnership negotiations."
  },
  {
    title: "GTM Strategy",
    description: "Go-to-market planning that aligns with Bitcoin-native audiences. Narrative-first approaches that resonate."
  },
  {
    title: "Community/Courses",
    description: "Building engaged communities and educational content that drives adoption and understanding."
  }
];

const clients = [
  "Stacks Foundation",
  "Hermetica",
  "Bitflow",
  "STX City"
];
---

<Layout title="Home">
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="max-w-4xl mx-auto px-6 py-24 md:py-32">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-tight">
        Growth agency for the<br />
        <span class="text-bitcoin">Bitcoin economy</span>
      </h1>
      <p class="mt-6 text-lg md:text-xl text-gray-600 max-w-2xl">
        Taptive helps Bitcoin-native companies grow through narrative-first strategy,
        business development, and community building.
      </p>
      <div class="mt-10 flex flex-col sm:flex-row gap-4">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-6 py-3 bg-bitcoin text-white font-medium rounded-lg hover:bg-bitcoin-dark transition-colors"
        >
          Get in touch
        </a>
        <a
          href="/work"
          class="inline-flex items-center justify-center px-6 py-3 border border-gray-200 text-gray-700 font-medium rounded-lg hover:border-gray-300 hover:bg-gray-50 transition-colors"
        >
          See our work
        </a>
      </div>
    </section>

    <!-- Services Section -->
    <section class="bg-gray-50 py-24">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-2xl md:text-3xl font-bold tracking-tight">What we do</h2>
        <div class="mt-12 grid md:grid-cols-3 gap-8">
          {services.map((service) => (
            <div class="bg-white p-6 rounded-xl border border-gray-100">
              <h3 class="text-lg font-semibold">{service.title}</h3>
              <p class="mt-3 text-gray-600 text-sm leading-relaxed">
                {service.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Clients Section -->
    <section class="py-24">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-2xl md:text-3xl font-bold tracking-tight">Who we've worked with</h2>
        <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-6">
          {clients.map((client) => (
            <div class="flex items-center justify-center p-6 bg-gray-50 rounded-xl">
              <span class="text-lg font-medium text-gray-700">{client}</span>
            </div>
          ))}
        </div>
        <div class="mt-8 text-center">
          <a href="/work" class="text-bitcoin hover:text-bitcoin-dark font-medium transition-colors">
            Learn more about our work →
          </a>
        </div>
      </div>
    </section>

    <!-- Philosophy Section -->
    <section class="bg-gray-900 text-white py-24">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-2xl md:text-3xl font-bold tracking-tight">Our approach</h2>
        <p class="mt-6 text-lg text-gray-300 max-w-2xl leading-relaxed">
          We believe in narrative-first growth strategy. In the Bitcoin economy,
          the story you tell matters as much as the product you build.
          We help companies find their narrative and bring it to the right audiences.
        </p>
        <a
          href="/about"
          class="mt-8 inline-flex items-center text-bitcoin hover:text-bitcoin-dark font-medium transition-colors"
        >
          More about Taptive →
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
